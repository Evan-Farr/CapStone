@model IEnumerable<SyncMe.Models.Profile>

@{
    ViewBag.Title = "ViewContacts";
}

<h2>My Contacts</h2>

<hr />
<div class="col-md-12">
    <div class="text-success">
        @TempData["Message"]
    </div>
    <div class="text-warning">
        @TempData["ErrorMessage"]
    </div>
</div>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Profile Picture")
        </th>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Age")
        </th>
        <th>
            @Html.DisplayName("State")
        </th>
        <th>
            @Html.DisplayName("Company")
        </th>
        <th>
            @Html.DisplayName("Education")
        </th>
        <th>
            @Html.DisplayName("Phone #")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            <img src="@Url.Action("SelectPicture", "Profiles", new { id = item.Id })" alt="" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SchoolName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @{
                ViewBag.counter = 0;
            }
            @if (ViewBag.AllSyncRequests.Count != 0)
                {
                    foreach (var request in ViewBag.AllSyncRequests)
                    {
                        if (request.Receiver.Id == item.Member.Id)
                        {
                            if (request.Sender.Id == ViewBag.SenderId)
                            {
                                if (request.Status == "Pending")
                                {
                                @Html.ActionLink("Remove Contact", "RemoveContact", new { id = item.Id }, null)
                                <br />
                                <p style="color: indianred">Request Pending</p>
                                ViewBag.counter = 1;
                                break;
                            }
                            else
                            {
                                @Html.ActionLink("Remove Contact", "RemoveContact", new { id = item.Id }, null)
                                <br />
                                @Html.ActionLink("View Sync", "ViewSyncedCalendar", new { id = item.Id }, new { @class = "green-action-link" })
                                ViewBag.counter = 1;
                                break;
                            }
                        }
                    }
                }
            }
            @if (ViewBag.counter == 0)
            {
                @Html.ActionLink("Remove Contact", "RemoveContact", new { id = item.Id }, null)
                <br />
                @Html.ActionLink("Send Sync Request", "SendSyncRequest", new { id = item.Id, reRoute = "ViewContacts" }, null)
            }
        </td>
    </tr>
    }

</table>
<p>
    @Html.ActionLink("Back", "ViewCalendar", "Members")
</p>

