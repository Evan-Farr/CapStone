@model IEnumerable<SyncMe.Models.GroupCalendar>

@{
    ViewBag.Title = "ChooseGroupSyncedCalendar";
}

<h2>Your Group Calendars</h2>

<hr />
<br />
@Html.ActionLink("Done", "ViewCalendar", null, new { @class = "btn btn-primary btn-md" })
<hr />
<div class="col-md-12">
    <div class="text-success">
        @TempData["Message"]
    </div>
    <div class="text-warning">
        @TempData["ErrorMessage"]
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Date Started")
        </th>
        <th>
            @Html.DisplayName("Creator")
        </th>
        <th>
            @Html.DisplayName("Invited")
        </th>
        <th>
            @Html.DisplayName("Joined")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Creator.FirstName)
                @Html.DisplayFor(modelItem => item.Creator.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invited)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Members.Count)
            </td>
            
            <td>
                @Html.ActionLink("View", "ViewGroupSyncedCalendar", new { id = item.Id }, null)
                <br />
                @Html.ActionLink("Remove", "RemoveGroupSyncedCalendar", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Done", "ViewCalendar", null, new { @class = "btn btn-primary btn-md" })
</p>

