@model IEnumerable<SyncMe.Models.Event>
@{
    ViewBag.Title = "ViewCalendar";
}

<br />
<hr />
<div class="col-md-12">
    <div class="text-success">
        @TempData["Message"]
    </div>
    <div class="text-warning">
        @TempData["ErrorMessage"]
    </div>
</div>
<hr />
<container>
    <div class="col-md-1">
        <center>
            @Html.ActionLink("Add New Event", "Create", "Events", null, new { @class = "btn btn-primary btn-md" })
            <br /><br />
            @Html.ActionLink("My Profile", "PrivateDetails", "Members", null, new { @class = "btn btn-primary btn-md" })
            <br /><br />
            @Html.ActionLink("Contacts", "ViewContacts", "Members", null, new { @class = "btn btn-primary btn-md" })
            <br /><br />
            @Html.ActionLink("View All Events", "PrivateIndex", "Events", null, new { @class = "btn btn-primary btn-md" })
        </center>
    </div>
    <div class="col-md-11">
        <div id="fullCalModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 id="modalTitle" class="modal-title"></h4>
                    </div>
                    <h5 id="modalStart" class="modal-body"></h5>
                    <h5 id="modalEnd" class="modal-body"></h5>
                    <h5 id="modalDetails" class="modal-body"></h5>
                    <h5 id="modalPrivate" class="modal-body"></h5>
                    <div class="modal-footer">
                        @Html.ActionLink("Send Invite", "SendInvite", "Members", @*new { id =  },*@ new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Get Directions", "GetDirections", "Events", @*new { id =  },*@ new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Weather Forecast", "GetWeather", "Events", @*new { id =  },*@ new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Edit", "Edit", "Events", @*new { id =  },*@ new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Delete", "Delete", "Events", @*new { id =  },*@ new { @class = "btn btn-primary btn-sm" })
                        <br /><br />
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <div id='calendar'></div>
    </div>
</container>

<script type="text/javascript">
    $(document).ready(function () {
        var date = new Date();
        var d = date.getDate();
        var m = date.getMonth();
        var y = date.getFullYear();

        $('#calendar').fullCalendar({
            allDay: false,
            timezone: 'local',
            selectable: true,
            selectHelper: true,
            editable: true,
            year: y,
            month: m,
            date: d,
            header: {
                left: 'title',
                right: 'prev,next,today,agendaDay,agendaWeek,month'
            },
            defaultView: 'month',
            editable: true,
            //googleCalendarApiKey: 'API-Key',
            droppable: true,
            slotDuration: '00:30:00',
            scrollTime: '12:00:00 AM',
            slotEventOverLap: true,
            disableResizing: false,
            eventOrder: '-start',
            events: @Html.Raw(Json.Encode(Model)),
            eventClick: function(event, jsEvent, view){
                $('#modalTitle').html(event.title);
                $('#modalStart').html("Start: " + event.start.toString("MM/dd/yyyy h:mm tt"));
                $('#modalEnd').html("End: " + event.end.toString("MM/dd/yyyy h:mm tt"));
                $('#modalDetails').html("Details: " + event.details);
                $('#modalPrivate').html("Private: " + event.isPrivate);
                $('#fullCalModal').modal();
            }
        });
    });
</script>
